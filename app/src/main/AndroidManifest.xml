        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.StartUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


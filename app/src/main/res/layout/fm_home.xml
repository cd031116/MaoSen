<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/dialog_red"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:text="茂森云控"/>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:background="@color/white"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/dot_red_circel"
        app:indicator_drawable_unselected="@drawable/dot_un_circle"
        app:indicator_height="@dimen/dp_10"
        app:indicator_margin="@dimen/dp_5"
        app:indicator_width="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/to_sign"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/sign_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤打卡"
            android:textColor="@color/c_333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>



    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:paddingBottom="@dimen/dp_2"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_l"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/home_ima"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/home_icon_bg"/>

        <TextView
            android:id="@+id/home_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_333"
            android:text="首页"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/msg_l"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/msg_ima"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:background="@drawable/msg_icon_bg"/>
        <TextView
            android:id="@+id/msg_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/msg_ima"
            android:textColor="@color/c_333"
            android:text="消息"/>


        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@drawable/em_unread_count_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contacts_l"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/contacts_ima"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/contacts_icon_bg"/>
        <TextView
            android:id="@+id/contacts_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_333"
            android:text="联系人"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_l"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/my_ima"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/my_icon_bg"/>
        <TextView
            android:id="@+id/my_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_333"
            android:text="我的"/>

    </LinearLayout>

</LinearLayout>